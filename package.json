{
	"name": "bddo",
	"displayName": "bddo",
	"description": "A VS Code extension to manage BDD features and scenarios.",
	"version": "0.0.1",
	"engines": {
		"vscode": "^1.103.0"
	},
	"activationEvents": [],
	"main": "./dist/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "bddo.open",
				"category": "BDDo",
				"title": "open"
			},
			{
				"command": "bddo.refreshTreeView",
				"category": "BDDo",
				"title": "refresh",
				"icon": "$(refresh)"
			}
		],
		"configuration": {
			"type": "object",
			"title": "bddo Configuration",
			"properties": {
				"bddo.featuresFilename": {
					"type": "string",
					"default": "bddo-data.json",
					"description": "The name of the JSON file where BDD tasks are stored."
				},
				"bddo.projectsFilename": {
					"type": "string",
					"default": "bddo-project.json",
					"description": "The name of the JSON file where folders settings are stored."
				},
				"bddo.scenariosFilename": {
					"type": "string",
					"default": "bddo-scenarios.json",
					"description": "The name of the JSON file where BDD scenarios are stored."
				}
			}
		},
		"viewsContainers": {
			"activitybar": [
				{
					"id": "bddo-view-container",
					"title": "BDDo tasks",
					"icon": "src/assets/svg/icon.svg"
				}
			]
		},
		"views": {
			"bddo-view-container": [
				{
					"id": "bddo-view",
					"name": "",
					"icon": "src/assets/svg/temp.svg"
				}
			]
		},
		"menus": {
			"view/title": [
				{
					"command": "bddo.refreshTreeView",
					"when": "view == bddo-view",
					"group": "navigation",
					"icon": "$(refresh)"
				}
			]
		}
	},
	"scripts": {
		"vscode:prepublish": "npm run package",
		"compile": "npm run check-types && npm run lint && node esbuild.js",
		"watch": "npm-run-all -p watch:*",
		"watch:esbuild": "node esbuild.js --watch",
		"watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
		"package": "npm run check-types && npm run lint && node esbuild.js --production",
		"compile-tests": "tsc -p . --outDir out",
		"watch-tests": "tsc -p . -w --outDir out",
		"pretest": "npm run compile-tests && npm run compile && npm run lint",
		"check-types": "tsc --noEmit",
		"lint": "eslint src",
		"test": "vscode-test"
	},
	"devDependencies": {
		"@types/mocha": "^10.0.10",
		"@types/node": "22.x",
		"@types/vscode": "^1.103.0",
		"@typescript-eslint/eslint-plugin": "^8.39.0",
		"@typescript-eslint/parser": "^8.39.0",
		"@vscode/test-cli": "^0.0.11",
		"@vscode/test-electron": "^2.5.2",
		"esbuild": "^0.25.8",
		"eslint": "^9.32.0",
		"npm-run-all": "^4.1.5",
		"typescript": "^5.9.2"
	},
	"dependencies": {
		"uuid": "^11.1.0"
	}
}
